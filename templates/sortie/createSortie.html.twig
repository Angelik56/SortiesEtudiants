{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Créer une sortie{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <p> </p>
        </div>
    </div>
    <div class="row">
    {#  {{render(controller('App\\Controller\\SortieController::choixLieu'))}}#}
