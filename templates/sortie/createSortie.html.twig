        <div class="col d-flex justify-content-center">
            <p> </p>
            <h1 class="h3 mb-3 font-weight-normal">Créer une sortie</h1>
        </div>
    </div>

    <div class="row">
    <div class="col-12 d-flex justify-content-center">
    <div class="card" style="width: 28rem;">
    <div class="card-body">
        {{ form_start(sortieCreateType) }}
    {{ form_row(sortieCreateType.nom) }}
