    {{ form_row(sortieCreateType.dateHeureDebut) }}
    {{ form_row(sortieCreateType.duree) }}
    {{ form_row(sortieCreateType.dateLimitInscription) }}
    {{ form_row(sortieCreateType.nbInscriptionsMax) }}
    {{ form_row(sortieCreateType.infosSortie) }}
    {{ form_row(sortieCreateType.etat) }}
    <br>
    <button type="submit" class="btn btn-light">Valider</button>
    {{ form_end(sortieCreateType) }}
