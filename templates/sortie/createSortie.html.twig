{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Créer une sortie{% endblock %}
{% block body %}
    <div class="container">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <p> </p>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-center">
            <p> </p>
            <h1 class="h3 mb-3 font-weight-normal">Créer une sortie</h1>
        </div>
    </div>

    <div class="row">
    <div class="col-12 d-flex justify-content-center">

    <div class="card" style="width: 28rem;">
    <div class="card-body">
        Campus : {{ app.user.campus.nom }}
    {{ form_start(sortieCreateType) }}
    {{ form_row(sortieCreateType.nom) }}
    {{ form_row(sortieCreateType.lieu) }} <br>
   <button  type="button" class="btn btn-outline-warning" onclick="window.location.href ='{{ path('/lieu') }}'">Ajouter un lieu (nouvelle page)</button>
    <br>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#exampleModal">
        Ajouter un lieu (modal)
    </button>
    {{ form_row(sortieCreateType.dateHeureDebut) }}
    {{ form_row(sortieCreateType.duree) }}
    {{ form_row(sortieCreateType.dateLimitInscription) }}
    {{ form_row(sortieCreateType.nbInscriptionsMax) }}
    {{ form_row(sortieCreateType.infosSortie) }}
    {{ form_row(sortieCreateType.etat) }}
    <br>
    <button type="submit" class="btn btn-light">Valider</button>
    {{ form_end(sortieCreateType) }}

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nouveau lieu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <diV class="form_group">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-outline-warning">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}