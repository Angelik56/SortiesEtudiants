{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p> </p>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center">

                {% if (app.user) %}
                    {% if(app.user.avatar) %}
                        <div class="avatarpage"
                             style="background-image: url('{{ asset('img/' ~ app.user.avatar) }}');">
                        </div>
                    {% else %}

                        <div class="avatarpage"
                             style="background-image: url('{{ asset('img/emoticons.jpg') }}');">
                        </div>
                    {% endif %}
                {% endif %}

            </div>
        </div>

        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <p></p>
                <h1 class="h3 mb-3 font-weight-normal">Profil de {{ profil.pseudo }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col d-flex justify-content-center">

                <div class="card">
                    <div class="card-body">

                        <p>Prénom : {{ profil.prenom }}</p>
                        <p>Nom : {{ profil.nom }}</p>
                        <p>Téléphone : {{ profil.telephone }}</p>
                        <p>Email : {{ profil.email }}</p>
                        <p>Campus : {{ profil.campus.nom }}</p>

{#                        <a href="{{ path('main_accueil') }}">#}
{#                            <button type="button" class="btn btn-secondary btn-sm">Retour</button>#}

                            <a href="javascript:history.go(-1)">
                                <button type="button" class="btn btn-secondary btn-sm">Retour</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>






{% endblock %}

{% block title %}
    Détails du profil | {{ parent() }}
{% endblock %}

