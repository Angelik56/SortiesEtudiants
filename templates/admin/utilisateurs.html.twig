{% extends 'base.html.twig' %}

{% block body %}

    <h4>Gestion des utilisateurs</h4>

    <div class="custom-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Campus</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for utilisateur in listeUtilisateurs %}

                <tr>
                    <td>{{ utilisateur.pseudo }}</td>
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>{{ utilisateur.campus.nom }}</td>
                    <td><a href="">{{ utilisateur.actif ? "Rendre inactif" : "Réactiver" }}</a> - <a href="">Supprimer</a></td>
                </tr>
            {% endfor %}

            </tbody>

        </table>

        <button type="button">Inscrire un Utilisateur</button>
        <button type="button">Inscrire Utilisateur via .CSV</button>
    </div>
{% endblock %}

{% block title %}

    Gérer les utilisateurs | {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}



