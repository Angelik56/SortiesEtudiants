{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Espace de gestion des villes des sorties</h2>
            <br>
            <img style="width: 150px; margin-bottom: 20px" src="{{ asset('img/villeColor.png') }}" alt="ville">
            <br>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">
                    <h5 class="card-header">Listes des villes</h5>
                    <div class="card-body">
                        <div class="custom-table">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Code Postal</th>
                                    <th scope="col">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ville in listeVilles %}
                                    <tr>
                                        <td>{{ ville.nom }}</td>
                                        <td>{{ ville.codePostal }}</td>
                                        <td><a href="{{ path('admin_modifierVille', {'id': ville.id}) }}" class="lienTableau">Modifier</a> - <a href="{{ path('admin_deleteVille', {'id': ville.id}) }}"class="lienTableau">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    {{ form_start(nouvelleVilleForm) }}
                                    <td>{{ form_row(nouvelleVilleForm.nom) }}</td>
                                    <td>{{ form_row(nouvelleVilleForm.codePostal) }}</td>
                                    <td><button type="submit" class="btn btn-warning ">Ajouter</button></td>
                                    {{ form_end(nouvelleVilleForm) }}
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br>
                <a href="{{ path('admin_control') }}"><button type="button" class="btn btn-secondary btn-sm">Retour</button></a>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>
{% endblock %}

