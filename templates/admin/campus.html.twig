{% extends 'base.html.twig' %}

{% block body %}

    <h4>Gestion des campus</h4>

<div class="custom-table">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Campus</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for campus in listeCampus %}

            <tr>
                <td>{{ campus.nom }}</td>
                <td><a href="{{ path('admin_modifierCampus', {'id': campus.id}) }}">Modifier</a> - <a href="{{ path('admin_supprimerCampus', {'id': campus.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}

            <tr>
                {{ form_start(nouveauCampusForm) }}
                <td>{{ form_widget(nouveauCampusForm) }}</td>
                <td><button type="submit">Ajouter</button></td>
                {{ form_end(nouveauCampusForm) }}
            </tr>
        </tbody>

    </table>
</div>
{% endblock %}

