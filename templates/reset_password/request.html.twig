{% extends 'base.html.twig' %}

{% block title %} Reset | {{ parent() }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p></p>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p></p>
                <h1 class="h3 mb-3 font-weight-normal">Réinitialise ton mot de passe</h1>
            </div>
        </div>


        <div class="row">
            <div class="col d-flex justify-content-center">

                <div class="card" ">
                <div class="card-body">



                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Entre ton adresse e-mail et nous t'enverrons un
                            lien pour réinitialiser ton mot de passe.

                        </small>
                        <p></p>
                    </div>

                    <button class="btn btn-warning btn-sm">Envoyer l'email</button>
                    {{ form_end(requestForm) }}


                </div>
            </div>
        </div>
    </div>
    </div>





{% endblock %}
