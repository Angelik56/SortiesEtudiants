{% extends 'base.html.twig' %}
{# {% form_theme registrationForm "bootstrap_5_layout.html.twig" %} #}

{% block title %}{{ parent() }} | Inscription {% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p></p>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center">
                <p></p>
                <h1 class="h3 mb-3 font-weight-normal">Page d'inscription à sortir.com</h1>
            </div>
        </div>

        <div class="row">
            <div class="col d-flex justify-content-center">

                <div class="card" style="width: 28rem;">
                    <div class="card-body">

                        {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.pseudo) }}
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.campus) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.telephone) }}
                        {{ form_row(registrationForm.avatar) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {#        {{ form_row(registrationForm.agreeTerms) }} #}

                        <button type="submit" class="btn btn-light">S'inscrire</button>
                        {{ form_end(registrationForm) }}


                    </div>
                </div>
            </div>
        </div>
    </div>

    <p>il faudra mettre ici la possibilité de télecharger une photo (property Avatar dans l'entité Utilisateur) </p>

{% endblock %}
